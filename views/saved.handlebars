<div class="container">

    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <a class="navbar-brand" href="/">Mongo Scraper</a>
        <button class="navbar-toggler" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01"
            aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarColor01">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="/">Home
                        <span class="sr-only">(current)</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/saved">Saved Articles</a>
                </li>
                <li class="nav-item">
                    <a class="btn btn-danger scrape-new">Scrape New Articles</a>
                </li>
                <li class="nav-item">
                    <a class="btn btn-danger clear">Clear Articles</a>
                </li>
            </ul>
        </div>
    </nav>

    <div id="wrapper">

        <div class="row" style="text-align-center">

            <div class="col-md-12">

                <div class="jumbotron text-center">
                    <h1 class="display-4">Mongo Scraper</h1>
                    <h2><i>Phoronix Edition</i></h2>

                </div>

            </div>
        </div>

        <div class="row">

            <div class="col-md-12">

                <div class="card">
                    <div class="card-body">
                        {{#each articles}}

                        <div id="articles">

                            <a href="{{this.link}}" target="_blank">{{this.title}}</a>

                        </div>

                        <div id="summary">
                            {{this.summary}}
                        </div>



                        {{#if saved}}

                        {{!-- <div class=".modal-container"> --}}

                            <div class="bootbox modal fade show" id="notesModal" tabindex="-1" role="dialog">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-body"><button type="button" class="bootbox-close-button close"
                                                data-dismiss="modal" aria-hidden="true"
                                                style="margin-top: -10px;">Ã—</button>
                                            <div class="bootbox-body">
                                                <div class="container-fluid text-center">
                                                    <h4>{{this.title}}</h4>
                                                    <hr>
                                                    <ul class="list-group note-container" id="notes">
                                                        {{!-- <li class="list-group-item">No notes for this article yet.</li> --}}
                                                    </ul>
                                                    <textarea id="bodyinput" placeholder="New Note" rows="4"
                                                        cols="60"></textarea>
                                                    <button type="button" class="close" data-dismiss="modal" id="save-note"
                                                        data-id="{{this.id}}">Save Note</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        {{!-- </div> --}}

                        <button class="delete-saved btn btn-danger" data-id="{{this.id}}">Delete from saved</button>

                        <button class="article-notes btn btn-success" data-toggle="modal" data-target="#notesModal"
                            data-id="{{this.id}}">Article Notes</button>

                        {{/if}}

                        {{/each}}



                    </div>
                </div>
            </div>
        </div>
    </div>
</div>